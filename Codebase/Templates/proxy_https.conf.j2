    listen 443 ssl;
    server_name {{ all_domains[0] }};
    ssl_certificate {{ cert_path }}/live/{{ all_domains[0] | lower }}/fullchain.pem;
    ssl_certificate_key {{ cert_path }}/live/{{ all_domains[0] | lower }}/privkey.pem;
    return 301 https://{{ all_domains[1] }}$request_uri;
}

# Main site
server {
    listen 443 ssl;
    server_name {{ all_domains | join(' ') }};

    ssl_certificate {{ cert_path }}/live/{{ all_domains[0] | lower }}/fullchain.pem;
    ssl_certificate_key {{ cert_path }}/live/{{ all_domains[0] | lower }}/privkey.pem;

    {% for route in routes %}
    location {{ route.location | trim }} {
        proxy_pass {{ route.target }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    {% endfor %}
}
