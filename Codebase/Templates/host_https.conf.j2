# Redirect HTTP → HTTPS
server {
    listen 80;
    server_name {{ all_domains | join(' ') }};
    return 301 https://{{ all_domains[1] }}$request_uri;
}

# Also catch the bare domain explicitly
server {
    listen 80;
    server_name {{ all_domains[0] }};
    return 301 https://{{ all_domains[1] }}$request_uri;
}

# Redirect bare → www over HTTPS
server {
    listen 443 ssl;
    server_name {{ all_domains[0] }};
    ssl_certificate {{ cert_path }}/live/{{ all_domains[0] | lower }}/fullchain.pem;
    ssl_certificate_key {{ cert_path }}/live/{{ all_domains[0] | lower }}/privkey.pem;
    return 301 https://{{ all_domains[1] }}$request_uri;
}

# Main HTTPS site
server {
    listen 443 ssl;
    server_name {{ all_domains | join(' ') }};

    ssl_certificate {{ cert_path }}/live/{{ all_domains[0] | lower }}/fullchain.pem;
    ssl_certificate_key {{ cert_path }}/live/{{ all_domains[0] | lower }}/privkey.pem;

    root {{ target }};
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }
}
