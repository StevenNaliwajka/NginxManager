# HTTP-only site (bare + www)
server {
    listen 80;
    server_name {{ all_domains | join(' ') }};

    # Redirect bare â†’ www
    if ($host = {{ all_domains[0] }}) {
        return 301 http://{{ all_domains[1] }}$request_uri;
    }

    root {{ target }};
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }
}
